<%- include("./partials/header.ejs")  %>

<div class="main-container">
    <h1>BLOG WEB APPLICATION</h1>
    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <div id="custom-entries-display">
            <div class="custom-display">
                <h2>Previous Entries</h2>
                <button type="button" class="btn btn-outline-primary"><a href="/entries"> New Entry</a></button>
            </div>
            <% if(locals.entries && locals.entries.length > 0){ %>
                <% for (entry = 0; entry < entries.length; entry++){%>
                    <div class="position-relative custom-display">
                        <label class="list-group-item py-3 pe-5" for="listGroupRadioGrid1">
                            <strong class="fw-semibold"><a href="/entries/<%= entry %>"> <%= entries[entry].title  %> </a> </strong>
                        </label>
                        <button type="button" class="btn btn-outline-danger" id="delete-btn" data-entry="<%= entry %>">DELETE</button>
                    </div>
                <%} %>
            <% } else { %>
                <h1>no entries</h1>
            <% } %>
        </div>
    </div>
</div>

<%- include("./partials/footer.ejs") %>
