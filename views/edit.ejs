<%- include("partials/header.ejs") %>

<div class="main-container">
    <form class="edit-container" action="/edit/<%= bookId %>" method="post">
    <% if(locals.bookInfo){ %>
            <input type="text" name="title" placeholder="Title" value="<%=bookInfo.title%>" required>
            <textarea name="content"><%= bookInfo.content %></textarea>
            <button type="submit">Save</button>
            <button><a href="/edit/<%= bookId %>/delete">Delete</a></button>
        <% } else { %>
            <input type="text" name="title" placeholder="Title" required>
            <textarea name="content"></textarea>
            <button type="submit">Save</button>
            <button disabled><a href="/edit/<%= bookId %>/delete">Delete</a></button>
        <% } %>
        
    </form>
</div>


<%- include("partials/footer.ejs") %>